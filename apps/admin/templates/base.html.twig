<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Dashboard Courses{% endblock %}</title>
    {% block stylesheets %}
        <!-- Google Font: Source Sans Pro -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
        <link rel="stylesheet" href="/dist/app.css">
    {% endblock %}
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    <!-- Preloader -->
    {#
    <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="adminlte/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
    </div>
    #}

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown user-menu">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <span class="d-none d-md-inline">{{ app.user.username }}</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="left: inherit; right: 0px;">
                    <!-- User image -->
                    <li class="user-header bg-primary">
                        <p>
                            {{ app.user.username }}
                            {#
                            Alexander Pierce - Web Developer
                            <small>Member since Nov. 2012</small>
                            #}
                        </p>
                    </li>
                    <!-- Menu Footer-->
                    <li class="user-footer">
                        <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat float-right">Sign out</a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('home') }}" class="brand-link">
            <span class="brand-text font-weight-light">CRM Courses</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->

                    <li class="nav-item">
                        <a href="{{ path('user-list') }}" class="nav-link">
                            <i class="nav-icon fas fa-edit"></i>
                            <p>Users</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-edit"></i>
                            <p>Categories</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-edit"></i>
                            <p>Levels</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {% block body %}

            {% block bodyHeader %}
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        {% block bodyHeaderContent %}
                        <div class="col-sm-6">
                            {% block bodyHeaderContentLeft %}
                            <h1 class="m-0">{{ title }}</h1>
                            {% endblock bodyHeaderContentLeft %}
                        </div>
                        <div class="col-sm-6">
                            {% block bodyHeaderContentRight %}
                            {% endblock bodyHeaderContentRight %}
                        </div>
                        {% endblock bodyHeaderContent %}
                    </div>
                </div>
            </div>
            {% endblock bodyHeader %}

            {% block bodySection %}
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                {% block bodySectionContent %}
                                {% endblock bodySectionContent %}
                            </div>
                        </div>
                    </div>
                </section>
            {% endblock bodySection %}
        {% endblock %}
    </div>
    <!-- /.content-wrapper -->

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

{% block javascripts %}
    <script src="/dist/app.js"></script>
{% endblock %}
</body>
</html>
